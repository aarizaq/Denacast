package oversim.tier2.camera;
import oversim.common.ITier;
//
// The compound module of the MPEG4Camera implementation
//
module MPEG4CameraModules like ITier
{
    @display("i=device/camera");
    gates:
        input udpIn;    // gate from the UDP layer
        input from_lowerTier;    // gate from the lower tier
        input from_upperTier;    // gate from the upper tier
        output udpOut;    // gate to the UDP layer
        output to_lowerTier;    // gate to the lower tier
        output to_upperTier;    // gate to the upper tier

    submodules:
        mpeg4camera: MPEG4Camera;
    connections allowunconnected:
        from_lowerTier --> mpeg4camera.from_lowerTier;
        to_lowerTier <-- mpeg4camera.to_lowerTier;
}
